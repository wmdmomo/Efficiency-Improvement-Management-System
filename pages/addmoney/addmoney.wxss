/* pages/money/addmoney/addmoney.wxss */
.add-all {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.key-board {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 30%;
}

.switch-container {
  display: flex;
  justify-content: center;
  margin-bottom: 5px;
  align-items: center;
}

.switch-out {
  width: 60%;
}

.add-row {
  flex: 0 0 8%;
  padding: 8px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #dbdbdb;
  border-bottom: 5px solid #f6f6f6;
}

.money-name {
  font-weight: bold;
}

.money-right {
  flex: 0 1 auto;
  display: flex;
}

.money-val {
  color: #ec616a;
  text-align: right;
}

.money-record {
  padding: 8px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.record-time {
  font-size: small;
  flex: 0 1 40%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.time-img {
  width: 20px;
  height: 20px;
  margin-right: 4px;
}

.record-detail {
  font-size: small;
  flex: 0 1 60%;
}

.picker {
  color: #76777b;
}

.del-icon {
  position: absolute;
  left:10px;
  width: 20px;
  height: 20px;
}