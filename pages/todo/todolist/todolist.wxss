.todo-container{
  min-height: 100vh;
  background-color: #f7f8fa;
}
.todo-add{ 
  margin-top: 20%;
  display: flex;
  justify-content: center;
  padding-bottom: 10%;
}
.todo-add image{
  width:48px;
  height: 48px;
}
.add-style{
  width:80%;
  border:1px solid whitesmoke;
  border-radius: 10px;
  background-color: white;
}
.todo-shadow{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}